<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    >
  <ViewAnimator
      android:id="@+id/views"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
    <edu.mit.csail.awakening.rook.PageView
        android:id="@+id/page"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    <!-- The page thumbnail grid.  We fill this with instances of the
         thumb layout.  The column width is set at runtime to fit the
         document's aspect ratio in a @dimen/thumb_bound x
         @dimen/thumb_bound box.  Clicking a cell doesn't do anything
         (only clicking a thumbnail image) so we disable visual
         feedback by setting the listSelector to transparent.  Cell
         spacing is handled in the thumb layout.

         XXX Disabling the list selector makes navigation mode
         confusing (not that selecting would do anything).
    -->
    <GridView
        android:id="@+id/thumbs"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:clickable="false"
        android:listSelector="@android:color/transparent"

        android:padding="0dp"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:columnWidth="@dimen/thumb_bound"
        />
  </ViewAnimator>
</LinearLayout>
